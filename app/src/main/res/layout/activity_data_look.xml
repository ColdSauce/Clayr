                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wbc_rlv1"
                        android:clickable="false"
                        android:background="@color/lightBlue"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

