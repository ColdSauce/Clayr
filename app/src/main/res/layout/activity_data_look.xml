                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/wbc_rlv2"
                        android:background="@drawable/triangle"
                        android:layout_margin="0dp"
                        android:clickable="false"
                        android:foreground="@color/lightBlue">

