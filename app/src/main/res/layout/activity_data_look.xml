                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/wbc_metabar">
                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="10dp"
                            android:foreground="@color/green">
                            android:id="@+id/wbc_bar">
